{
  "author": "Galveston01",
  "content_scripts": [
    {
      "js": [
        "js/extension.js"
      ],
      "css": [
        "css/extension.css"
      ]
    }
  ],
  "description": "Use macros to create advanced rules",
  "gateway_specific_settings": {
    "webthings": {
      "exec": "{nodeLoader} {path}",
      "primary_type": "adapter",
      "strict_max_version": "*",
      "strict_min_version": "0.10.0"
    }
  },
  "homepage_url": "https://github.com/Galveston01/macrozilla",
  "id": "macrozilla",
  "license": "GPL-3.0",
  "manifest_version": 1,
  "name": "Macrozilla",
  "short_name": "Macros",
  "version": "0.1.0",
  "web_accessible_resources": [
    "js/*.js",
    "css/*.css",
    "pages/*.html",
    "pages/*.js",
    "pages/*.css",
    "components/*.html",
    "components/*.js",
    "components/*.css",
    "images/*.svg"
  ],

  "options": {
    "default": {
      "pollscanIntervalInterval": 6000
    },
    "schema": {
      "type": "object",
      "required": [
        "accessToken",
        "scanInterval"
      ],
      "properties": {
        "accessToken": {
          "type": "string",
          "title": "The access token for the gateway"
        },
        "scanInterval": {
          "type": "number",
          "title": "Interval in seconds that defines how often to scan for new devices"
        }
      }
    }
  }
}
