{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "allOf": [{"$ref": "/class"}],
  "properties": {
    "left": {"$ref": "/class"},
    "right": {"$ref": "/class"},
    "speed": {"$ref": "/class"},
    "time": {"$ref": "/class"},
    "ups": {"$ref": "/class"}
  },
  "required": ["left", "right"],
  "dependencies": {
    "ups": {
      "oneOf": [
        {
          "required": ["speed"]
        },
        {
          "required": ["time"]
        }
      ]
    },
    "speed": {
      "not": {"required": ["time"]}
    },
    "time": {
      "not": {"required": ["speed"]}
    }
  }
}